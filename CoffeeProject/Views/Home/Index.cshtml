@{
    ViewData["Title"] = "Home Page";
}
@model List<CoffeeModel>
<div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(19rem, 2fr)); gap: 10px;">
    @foreach (var coffeeType in Model)
    {
        <div class="card" style=" display: flex; flex-direction: column; align-items: center; text-align: center; background-color: #f0f0f0; padding: 20px; ">
            <img class="card-img-top" style="width: 100%; height: auto; object-fit: contain; margin-bottom: 10px;" src="coffee-photo/@coffeeType.PhotoPath" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">@coffeeType.Name</h5>
                <p class="card-text">@coffeeType.Price</p>
                <p class="card-text">@coffeeType.Description</p>
                <a class="btn btn-xs btn-success" asp-controller="Cart" asp-action="AddToCart" asp-route-coffeeId="@coffeeType.Id">add to cart</a>
            </div>
        </div>
    }
</div>
