<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CoffeeProject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CoffeeProject.styles.css" asp-append-version="true" />
    <link href="~/font-awesome/css/all.min.css" rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">CoffeeProject</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" style="display: flex; flex-direction: column; align-items: center; text-align: center; background-color: white;" id="navbarSupportedContent">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="/">Home</a>
                        </li>
                        @if (!User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-action="Login" asp-controller="Auth">Giriş Yap</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-action="SignUp" asp-controller="Auth">Kayıt Ol</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown"
                                   aria-haspopup="true" aria-expanded="false">
                                    Hesabım
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <a class="dropdown-item" href="/Payment">Kartlarım</a>
                                    <a class="dropdown-item" href="#">Adreslerim</a>
                                    <a class="dropdown-item" href="#">Something else here</a>
                                </div>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-action="Logout" asp-controller="Auth">Çıkış yap</a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link" style=" background-color: white; color: #333; padding: 10px; display: inline-block; text-decoration: none; transition: background-color 0.3s;" asp-controller="Cart" asp-action="List">
                                @await Component.InvokeAsync("CartSummary")
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    @if (TempData["RegisterSuccessMessage"] != null)
    {
        <div class="alert alert-success">
            <strong>Başarılı </strong>@TempData["RegisterSuccessMessage"]
        </div>
    }
    @if (TempData["LoginSuccessMessage"] != null)
    {
        <div class="alert alert-success">
            <strong>Başarılı </strong>@TempData["LoginSuccessMessage"]
        </div>
    }
    @if (TempData["message"] != null)
    {
        <div class="alert alert-success">
            <strong>Başarılı </strong>@TempData["message"]
        </div>
    }
    <div class="container">
        <main role="main" class="col-md-12">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>


    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

