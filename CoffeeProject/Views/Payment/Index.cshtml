@model List<PaymentCardListModel> 

<h1>Ödeme Kartları</h1>

@if (Model.Count > 0)
{
    <table>
        <thead>
            <tr>
                <th>Ad</th>
                <th>Kart Numarası</th>
                <th>Son Kullanma Tarihi</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var card in Model)
            {
                <tr>
                    <td>@card.CardName</td>
                    <td>@card.CardNumber</td>
                    <td>@card.ExpiryDate</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Kullanıcıya ait ödeme kartı bulunamadı.</p>
}
