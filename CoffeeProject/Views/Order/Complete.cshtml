@{
    ViewBag.Title = "Siparişiniz Hazırlanıyor";
    Layout = null;
}

<style>
    .container {
        max-width: 400px;
        margin: 0 auto;
        text-align: center;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        background-color: #f9f9f9;
    }

    h2 {
        color: #333;
    }

    p {
        margin-top: 20px;
        color: #666;
    }

    .spinner {
        margin-top: 30px;
        display: inline-block;
        width: 40px;
        height: 40px;
        border: 4px solid rgba(0, 0, 0, 0.1);
        border-left-color: #7986cb;
        border-radius: 50%;
        animation: spin 1s ease-in-out infinite;
    }

    .keyframes spin {
        0% {
            transform: rotate(0deg);
        }
        100% {
            transform: rotate(360deg);
        }
    }
</style>

<div class="container">
    <h2>Siparişiniz Hazırlanıyor</h2>
    <p>Kahve siparişiniz onaylandı ve hazırlanıyor. Lütfen bekleyin.</p>
    <div class="spinner"></div>
</div>
